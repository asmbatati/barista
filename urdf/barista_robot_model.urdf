    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0.0775" rpy="0 0 0"/>
  </joint>

  <link name="chassis">
    <visual>
      <geometry>
        <cylinder length="0.155" radius="0.178"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.155" radius="0.178"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0992" ixy="0.0" ixz="0.0" iyy="0.0992" iyz="0.0" izz="0.1582"/>
    </inertial>
  </link>

  <!--wheels cylinder radius=35.2mm length=20.6mm-->
