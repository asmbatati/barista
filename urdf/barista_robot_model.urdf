  <link name="front_caster_wheel_r">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.002" radius="0.010"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.002" radius="0.010"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="2.5e-7" ixy="0.0" ixz="0.0" iyy="2.5e-7" iyz="0.0" izz="5.0e-7"/>
    </inertial>
  </link>

  <joint name="front_pitch_joint" type="continuous">
